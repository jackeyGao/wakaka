.style {
  display: flex;
  justify-content: center;
  margin-bottom: 28rpx;
}

.style .item {
  display: flex;
  flex-flow: row wrap;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin: 14rpx;
}

.export {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.createstatus, .export .van-icon {
  color: #404040;
  font-weight: 300;
  font-size: 32rpx;
  line-height: 2;
  letter-spacing: 5rpx;
}

.createstatus {
  padding-left: 16rpx;
  font-family: Georgia, 'Times New Roman', Times, serif;
}