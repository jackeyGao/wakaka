/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.cropper-buttons {
  display: flex;
  flex-flow: row wrap;
  color: #fff;
  line-height: 45px;
  justify-content: center;
}


.card {
  background: #393e46;
  display: flex;
  flex-flow: column wrap;
  align-items: center;
  width: 100%;
  max-width: 500px;
}

.card .image {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.card.normal .image {
}

.card .text {
  width: calc(100% - 40px);
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
}

.card.normal .text {
  margin-bottom: 20px;
}

.card .p {
  color: #222831;
  display: flex;
  justify-content: flex-start;
}

.card .m {
  color: #d1d1d1;
  display: flex;
  justify-content: flex-end;
}

.card.horizon .text {
  margin-top: 20px;
  margin-bottom: 20px;
}

.card.horizon .p {
  color: #222831;
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 20px;
}

.card.horizon .m {
  color: #d1d1d1;
  display: flex;
  justify-content: center;
  margin-top: 20px;
  margin-bottom: 0px;
}


.card.exhibit .text {
  margin-top: 20px;
}

.card.exhibit .p {
  color: #222831;
  display: flex;
  justify-content: flex-end;
  font-size: 14px;
  margin-bottom: 10px
}

.card.exhibit .m {
  color: #d1d1d1;
  display: flex;
  justify-content: flex-end;
  margin-bottom: 20px;
  font-size: 12px;
}

.copy {
  display: none;
}

.controller {
  color: #fff;
  width: 100%;
  position:fixed;
  bottom: 50px;
  left:0;
}

